<section class="container container__admin">
  <h1 class="title">Admin page</h1>
  <div class="container__users">
    {{#each users.payload}}
    <article id="{{this._id}}" class="card__user">
      <div class="card__user__info">
        <h2>Nombre: {{this.first_name}} {{this.last_name}}</h2>
        <p>Email: {{this.email}}</p>
        <p>Rol: {{this.role}}</p>
      </div>
      <div class="card__user__actions">
        <button class="btn__user btn__put" onclick="changeUserRole('{{this._id}}')">Cambiar rol</button>
        <button class="btn__user btn__delete" onclick="deleteUser('{{this._id}}')">Eliminar</button>
      </div>
    </article>
  {{/each}}
  </div>
</section>

<script src="js/admin.js"></script>